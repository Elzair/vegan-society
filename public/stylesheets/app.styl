.entryContent
  @extend .flex
  vendor('box-orient', vertical)
  vendor('box-direction', normal)
  vendor('flex-direction', column)
  vendor('box-align', center)
  vendor('flex-align', center)
  vendor('align-items', center)

#address1
  margin-bottom 0

#address2
  margin-top 0

.description
  text-align center

ul.info
  clear both
  margin 0
  list-style none

ul.info > li
  display inline-block
  vertical-align top
  text-align center

ul.info > li > dl > dt
  font-weight bold

dd
  margin 0

.large
  font-size 20px
