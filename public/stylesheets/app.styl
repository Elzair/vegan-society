html, body, .fullscreen, #map
  height 100%
  margin 0
  padding 0

.hidden
  display none

.firstHeading
  color green
  text-align center

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

.flex
  vendor('display', box)
  vendor('display', flexbox)
  vendor('display', flex)

.bodyContent
  @extend .flex
  vendor('box-orient', horizontal)
  vendor('box-direction', normal)
  vendor('flex-direction', row)
  vendor('box-pack', justify)
  vendor('flex-pack', justify)
  vendor('justify-content', space-between)
